{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-app",
  "version": "2.5.5",
  "identifier": "com.apiai.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ApiAi",
        "width": 900,
        "height": 700,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "core:window:allow-set-size",
            "core:window:allow-inner-size",
            "dialog:allow-save",
            "dialog:allow-message",
            "dialog:allow-ask",
            "dialog:default",
            "fs:allow-write-text-file",
            "fs:allow-read-text-file",
            "fs:allow-exists",
            "fs:allow-mkdir",
            "fs:allow-read-dir",
            "fs:scope-home-recursive",
            "fs:scope-all",
            "opener:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
